<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:text="@string/tvmusica"
        android:textSize="20sp"
        android:textAlignment="center"
        android:id="@+id/tvMusica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btTocar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Tocar"
       android:onClick="tocar"/>

    <Button
        android:id="@+id/btPausar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pausar"
        android:onClick="pausar"
        android:enabled="false"/>

    <Button
        android:id="@+id/btParar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parar"
        android:onClick="parar"
        android:enabled="false"/>

    <ListView
        android:id="@+id/lvMusicas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

</LinearLayout>
